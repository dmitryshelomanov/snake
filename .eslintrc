{
  "extends": "@atomix/react",
  "rules": {
    "prefer-promise-reject-errors": "off",
    "no-param-reassign": "off",
    "unicorn/no-process-exit": "off",
    "no-mixed-operators": "off",
    "import/export": "off",
    "unicorn/prevent-abbreviations": "off"
  },
  "globals": {
    "requestAnimationFrame": true,
    "document": true,
    "Path2D": true,
    "window": true
  },
  "plugins": ["jest"],
  "env": {
    "jest/globals": true
  }
}
